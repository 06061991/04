pipeline {
    agent any
    environment {
        DOCKERHUB_CREDENTIALS = credentials('docker')
    }
    stages {
        stage("Clean Up") {
            steps {
                deleteDir()
            }
        }

        stage("Checkout") {
            steps {
                git url: 'https://github.com/06061991/04.git'
            }
        }

        stage("Generate Docker Image") {
            steps {
                sh "docker build -t 06061991/04-app:1.1.${env.BUILD_NUMBER} ."
            }
        }

        stage("Login to DockerHub") {
            steps {
                sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
            }
        }

        stage("Push Docker Image") {
            steps {
                sh "docker push 06061991/04-app:1.1.${env.BUILD_NUMBER}"
                sh "docker image rm 06061991/04-app:1.1.${env.BUILD_NUMBER}"
            }
        }
     }
}
